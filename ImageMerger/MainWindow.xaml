<Window x:Class="ImageMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMerger"
        mc:Ignorable="d"
        Title="ImageMerger"
        MinWidth="320" MinHeight="240" SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp"
        Background="Black"
        >
    <StackPanel Name="stackPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Name="image" Stretch="None" Width="auto" Height="auto" MouseDown="image_MouseDown"/>
    </StackPanel>
</Window>
